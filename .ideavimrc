source ~/.vimrc.keymap
set noideastatusbar
" Insert mode
inoremap <C-k> <Up>
inoremap <C-j> <Down>
inoremap <C-l> <Right>
inoremap <C-h> <Left>

nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>


" enable emulated plugins
set surround
set multiple-cursors
set commentary

" Line number highlight
highlight LineNr  ctermbg=black

nnoremap <space>Q :action ReopenClosedTab<cr>

" Show usage
nnoremap su :action ShowUsages<cr>

"nmap gr :action ShowUsages<CR>
nmap <C-p> :action ParameterInfo<CR>
imap <C-p> <C-o>:action ParameterInfo<CR>
nmap <leader>n :action GotoNextError<CR>

nnoremap <leader><leader> :action GotoFile<CR>
nmap <leader>t :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>ns :action GotoSymbol<cr>
nmap <leader>nm :action FileStructurePopup<cr>
nmap <leader>d :action ShowErrorDescription<cr>
nmap == :action ReformatCode<cr>j

" KJUMP plugin settings
nmap <c-;> :action KJumpAction<cr>
nmap <leader><leader>w :action KJumpAction.Word0<cr>
nmap <leader><leader>l :action KJumpAction.Line<cr>

nmap <, :action MoveElementLeft<CR>
nmap >, :action MoveElementRight<CR>

nmap <leader>gr :action Vcs.RollbackChangedLines<CR>


" IDEA specific
nmap <leader>? :action GotoAction<CR>

" change font size
nmap + :action EditorIncreaseFontSize<CR>
nmap - :action EditorDecreaseFontSize<CR>
" nmap <leader>= :action EditorResetFontSize<CR>

" code navigation
nmap <leader>e :action GotoFile<CR>
nmap <leader>a :action FindInPath<CR>

nnoremap <leader>l :action EditorToggleShowWhitespaces<cr>

nnoremap [q :action PreviousOccurence<cr>
nnoremap ]q :action NextOccurence<cr>
nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>
nnoremap [c :action VcsShowPrevChangeMarker<cr>
nnoremap ]c :action VcsShowNextChangeMarker<cr>
set showmode

"" built-in navigation to navigated items works better
"nnoremap <c-o> :action Back<cr>
"nnoremap <c-i> :action Forward<cr>
"" but preserve ideavim defaults
"nnoremap g<c-o> <c-o>
"nnoremap g<c-i> <c-i>

" buildin search
nnoremap g/ :action Find<cr>

nnoremap ,e :action SearchEverywhere<CR>
nnoremap ,g :action FindInPath<CR>
nnoremap ,s :action FileStructurePopup<CR>

nnoremap U :action FindUsages<CR>
nnoremap R :action RenameElement<CR>

"nnoremap <leader>= mzggVG=`z